<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_5_0.xsd"
         version="5.0">

    <!-- Servlet pour afficher la page d'accueil -->
    <servlet>
        <servlet-name>Credit</servlet-name>
        <servlet-class>controller.CreditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Credit</servlet-name>
        <url-pattern>/credit</url-pattern>
    </servlet-mapping>

    <!-- Servlet pour enregistrer le plat préféré en cookie -->
    <servlet>
        <servlet-name>FormDepense</servlet-name>
        <servlet-class>controller.FormDepenseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FormDepense</servlet-name>
        <url-pattern>/formDepense</url-pattern>
    </servlet-mapping>

    <!-- Servlet pour enregistrer le plat préféré en cookie -->
    <servlet>
        <servlet-name>DepenseServlet</servlet-name>
        <servlet-class>controller.DepenseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DepenseServlet</servlet-name>
        <url-pattern>/depense</url-pattern>
    </servlet-mapping>

</web-app>
